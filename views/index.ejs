<%- include('_header') %>

	<header class="main-header " style="background-image: url('/assets/img/intro.jpg')">
	<div class="vertical">
		<div class="main-header-content inner">
			<h1 class="page-title">Fashion Critiques</h1>
			<div class="entry-title-divider">
				<span></span><span></span><span></span>
			</div>
			<h2 class="page-description">Thoughts, reviews and ideas since 1999.</h2>
		</div>
	</div>
	<a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
	</header>
	<main id="content" class="content" role="main">
	<div class="wraps">
		<img src="assets/img/shadow.png" class="wrapshadow">
		<div class="grid">
			<%entries.forEach((entry) => { %>
				<div class="grid-item">
					<article class="post">
						<iframe width="100%" height="230" src="<%=entry.link%>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

						<div class="wrapgriditem">
							<header class="post-header">
								<h2 class="post-title"><a href='<%= entry.link %>'><%= entry.title %></a></h2>
							</header>
							<section class="post-excerpt">
								<p>
								 <%= entry.description%>
								</p>
							</section>


							<footer class="post-meta">
								<img class="author-thumb" src="assets/img/gravatar.jpg" alt="David" nopin="nopin"/>
								<a href="../template/author.html">Nadun</a>
								<time class="post-date" ><%= entry.uploadtimestamp.toString().substring(4,16)%></time>

							</footer>
							<%if (typeof username !== "undefined") {%>
							<br>
							<a class="buttonlink" href="/users/editEntry/<%=entry.vlog_id%>"><button class="button1">Edit</button></a>
							<%}%>
						</div>
					</article>
				</div>

			<%})%>

		</div>

	</div>
	</main>

<%- include('_footer') %>

