<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Entry</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/assets/css/adminlte.css">
    <!-- jQuery -->
    <script src="/plugins/jquery/jquery.min.js"></script>

</head>


<body class="hold-transition login-page" >
<div class="login-box">

    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <!--      <p class="login-box-msg"><b>Log in</b></p>-->
            <div class="login-logo">
                <b>Edit Entry</b>
            </div>
            <% if (typeof msg !== 'undefined') { %>
                <div class="alert alert-danger text-center" role="alert"><%= msg %></div>
            <% } %>
            <% if (typeof successmsg !== 'undefined') { %>
                <div class="alert alert-success text-center" role="alert"><%= successmsg %></div>
            <% } %>

            <form action="/users/editEntry" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input class="form-control" id="title" name="title" value="<%= entry.title %>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description (1000 characters)</label>
                    <textarea class="form-control" id="description" rows="3" name="description" required><%= entry.description %></textarea>
                </div>

                <div class="form-group">
                    <label for="link">Youtube URL</label>
                    <input class="form-control" id="link" name="link" value="<%= entry.link %>" required>
                </div>

                <div class="form-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="coverImage" name="coverImage">
                        <label class="custom-file-label" for="coverImage">Cover Image</label>
                    </div>
                    <br><br>
                    <img src="/uploads/<%=entry.image%>" width="100%" height="200" alt="">
                    <input type="text" name="oldImage" hidden value="<%=entry.image%>">
                    <input type="text" name="id" hidden value="<%=entry.vlog_id%>">

                </div>


                <div class="row">

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>


            <br>

        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<!-- /.login-box -->
</body>


<!-- Bootstrap 4 -->
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="/assets/js/adminlte.min.js"></script>
</html>